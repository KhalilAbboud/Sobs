<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sobs.Views.ButtonPageView"
             xmlns:viewModels="clr-namespace:Sobs.ViewModels"
             x:DataType="viewModels:ButtonPageViewModel">

    <StackPanel Margin="10" Spacing="20" HorizontalAlignment="Center" >
        <TextBlock Foreground="White" FontSize="50" FontWeight="Bold" HorizontalAlignment="Center" Width="600">
                <TextBlock.Inlines>
                    <Underline>-Assign Your Task: </Underline>
                </TextBlock.Inlines>
            </TextBlock>

        <TextBlock Foreground="White" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" Width="300">
                <TextBlock.Inlines>
                    <Underline>Task Name: </Underline>
                </TextBlock.Inlines>
        </TextBlock>

        <TextBox Width="200" Text="{Binding TaskName, Mode=TwoWay}" />
        <Button Content="Create Task" Command="{Binding MakeTaskCommand}" Width="180" HorizontalAlignment="Center"/>
    </StackPanel>

    
</UserControl>
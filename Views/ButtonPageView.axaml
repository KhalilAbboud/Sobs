<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sobs.Views.ButtonPageView"
             xmlns:viewModels="clr-namespace:Sobs.ViewModels"
             x:DataType="viewModels:ButtonPageViewModel">

    <StackPanel Margin="10" Spacing="10">
        <TextBlock Text="Make Your Project." FontSize="20" HorizontalAlignment="Center" />
        <Button Content="Show Message" Command="{Binding ShowMessageCommand}" Width="150" />
        <Button Content="Create File" Command="{Binding CreateFileCommand}" Width="150" />

        <TextBlock Text="Project Name:" Margin="0,20,0,5" />
        <TextBox Width="200" Text="{Binding ProjectName, Mode=TwoWay}" />

        <Button Content="Make A Project" Command="{Binding MakeProjectCommand}" Width="150" />
    </StackPanel>

    
</UserControl>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Sobs.Views.MessageWindow"
        Title="Message" Width="400" Height="200">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock x:Name="MessageText" FontSize="16" HorizontalAlignment="Center" />
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Click="OnOkClicked"/>
    </StackPanel>
</Window>
